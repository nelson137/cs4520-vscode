{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceRoot}/build/a.out",
            "args": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
